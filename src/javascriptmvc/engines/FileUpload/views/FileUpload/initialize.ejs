<fieldset>
    <div class="title-wrap">
        <strong class="label"><%= data.name %>:</strong>
    </div>
    <div class="fileupload-buttonbar row">
        <% if(!data.fields[0].readonly) { %>
            <span class="fileinput-button">
                <span><button value="Add files...">Add files...</button></span>
                <input type="file" name="files[]" multiple="true">
            </span>
        <% } %>
    </div>
    <div class="ui-widget help-box">
        <div class="ui-state-highlight ui-corner-all help-content">
            <p>
                <span class="ui-icon ui-icon-info"></span>
                <%= data.help %>
            </p>
        </div>
    </div>
    <table class="category-table" cellpadding="0" cellspacing="0">
        <thead>
        <tr>
            <th class="image"></th>
            <th class="name">File name</th>
            <th class="price-holder">File size</th>
            <th class="info">Status</th>
            <th class="scroll"></th>
        </tr>
        </thead>
    </table>
    <div class="category-table-holder">
        <table class="category-table" cellpadding="0" cellspacing="0">
            <tbody class="files"></tbody>
        </table>
    </div>
</fieldset>
