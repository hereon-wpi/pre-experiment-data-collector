<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <env-entry>
        <env-entry-name>TANGO_HOST</env-entry-name>
        <env-entry-value>hzgcttest:10000</env-entry-value>
        <env-entry-type>java.lang.String</env-entry-type>
    </env-entry>
    <display-name>PreExperiment Data Collector</display-name>
    <distributable/>
    <listener>
        <listener-class>hzg.wpn.hdri.predator.ApplicationLoader</listener-class>
    </listener>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>hzg.wpn.hdri.predator.backend.UserFilter</filter-class>
    </filter>
    <servlet>
        <servlet-name>MetaServlet</servlet-name>
        <display-name>MetaServlet</display-name>
        <servlet-class>hzg.wpn.hdri.predator.backend.jsonp.MetaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataServlet</servlet-name>
        <display-name>DataServlet</display-name>
        <servlet-class>hzg.wpn.hdri.predator.backend.jsonp.DataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadHandler</servlet-name>
        <display-name>UploadHandler</display-name>
        <description>Handles user's upload actions</description>
        <servlet-class>hzg.wpn.hdri.predator.backend.upload.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataSetUploadHandler</servlet-name>
        <display-name>DataSetUploadHandler</display-name>
        <description>Handles user's upload actions</description>
        <servlet-class>hzg.wpn.hdri.predator.backend.upload.DataSetUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>hzg.wpn.hdri.predator.backend.IndexServlet</servlet-class>
        <init-param>
            <param-name>template.file.name</param-name>
            <param-value>index.vm</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>MetaYaml</servlet-name>
        <servlet-class>hzg.wpn.hdri.predator.backend.MetaYamlServlet</servlet-class>
    </servlet>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>MetaServlet</servlet-name>
        <url-pattern>/Meta.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataServlet</servlet-name>
        <url-pattern>/DataSets.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadHandler</servlet-name>
        <url-pattern>/backend/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataSetUploadHandler</servlet-name>
        <url-pattern>/backend/upload/data</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MetaYaml</servlet-name>
        <url-pattern>/admin/meta.yaml</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>eXperiment InformaTion</web-resource-name>
            <!--<url-pattern>/web-client/apps/main/*</url-pattern>
            <url-pattern>/backend/*</url-pattern>-->
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>user</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Basic Authentication</realm-name>
        <!--<auth-method>FORM</auth-method>
        <form-login-config>
        <form-login-page>/login.html</form-login-page>
        <form-error-page>/fail_login.html</form-error-page>
        </form-login-config>-->
    </login-config>
    <security-role>
        <description>The owner of the login/password pair.</description>
        <role-name>user</role-name>
    </security-role>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>