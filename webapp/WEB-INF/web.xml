<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" metadata-complete="true"
         version="3.1">
    <display-name>PreExperiment Data Collector</display-name>
    <distributable/>
    <listener>
        <listener-class>hzg.wpn.predator.web.ApplicationLoader</listener-class>
    </listener>
    <filter>
        <filter-name>UserFilter</filter-name>
        <filter-class>hzg.wpn.predator.web.backend.UserFilter</filter-class>
    </filter>
    <servlet>
        <servlet-name>MetaServlet</servlet-name>
        <servlet-class>hzg.wpn.predator.web.backend.jsonp.MetaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataServlet</servlet-name>
        <servlet-class>hzg.wpn.predator.web.backend.jsonp.DataServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UploadHandler</servlet-name>
        <servlet-class>hzg.wpn.predator.web.backend.upload.UploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DataSetUploadHandler</servlet-name>
        <servlet-class>hzg.wpn.predator.web.backend.upload.DataSetUploadServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>hzg.wpn.predator.web.backend.IndexServlet</servlet-class>
        <init-param>
            <param-name>template.file.name</param-name>
            <param-value>index.vm</param-value>
        </init-param>
    </servlet>
    <filter-mapping>
        <filter-name>UserFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>MetaServlet</servlet-name>
        <url-pattern>/Meta.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataServlet</servlet-name>
        <url-pattern>/DataSets.json</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UploadHandler</servlet-name>
        <url-pattern>/backend/upload</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DataSetUploadHandler</servlet-name>
        <url-pattern>/backend/upload/data</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index.html</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>eXperiment InformaTion</web-resource-name>
            <!--<url-pattern>/web-client/apps/main/*</url-pattern>
            <url-pattern>/backend/*</url-pattern>-->
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>desy-user</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>Basic Authentication</realm-name>
        <!--<auth-method>FORM</auth-method>
        <form-login-config>
        <form-login-page>/login.html</form-login-page>
        <form-error-page>/fail_login.html</form-error-page>
        </form-login-config>-->
    </login-config>
    <security-role>
        <description>The owner of the login/password pair.</description>
        <role-name>desy-user</role-name>
    </security-role>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>